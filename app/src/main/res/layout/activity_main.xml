<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:background="#FCFDFD"
        android:textSize="50dp"
        android:textColor="#1B1A1A"
        android:textStyle="bold"
        android:paddingBottom="40dp"
        android:textAlignment="textEnd"
        android:layout_marginRight="16dp"

        android:layout_above="@+id/result">

    </TextView>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:background="#FCFDFD"
            android:textSize="70dp"
            android:textColor="#717373"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_marginRight="16dp"
           android:layout_above="@+id/layout_1">

        </TextView>

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9FD6DCE4"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear_btn"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="C"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/open_btn"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#A8F48D0F"
                android:text="("
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/close_btn"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#A8F48D0F"
                android:text=")"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btndivide"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#A8F48D0F"
                android:text="/ "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="7"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="8"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="9"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnmul"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#A8F48D0F"
                android:text="*"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="4"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="5 "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="6"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnsub"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#A8F48D0F"
                android:text="-"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:layout_marginStart="2sp"
            android:layout_marginTop="2sp"
            android:layout_marginEnd="2sp"
            android:layout_marginBottom="2sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="2"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="3"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnadd"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#A8F48D0F"
                android:text="+ "
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/allclear"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="AC"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnzero"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="0"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#101212"
                android:text="."
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnequal"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:backgroundTint="#A8F48D0F"
                android:text="="
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="34sp"
                android:textStyle="bold"
                app:cornerRadius="30dp">

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>